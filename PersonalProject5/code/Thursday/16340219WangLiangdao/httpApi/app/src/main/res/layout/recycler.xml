<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#FFFF"
        android:layout_margin="5dp"
        app:contentPadding="7dp">
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="visible"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.experiment.wangld.httpapi.MyImageView
                android:id="@+id/picture"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_gravity="center"
                android:visibility="invisible"/>
            <SeekBar
                android:id="@+id/seek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
            <RelativeLayout
                android:id="@+id/statistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@id/seek"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="播放:"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/playcontent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="112"
                    android:textSize="15dp"
                    android:layout_toRightOf="@id/play"/>

                <TextView
                    android:id="@+id/comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评论:"
                    android:textSize="15dp"
                    android:layout_toRightOf="@id/playcontent"/>
                <TextView
                    android:id="@+id/commentcontent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="112"
                    android:textSize="15dp"
                    android:layout_toRightOf="@id/comment"/>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时长:"
                    android:textSize="15dp"
                    android:layout_toRightOf="@id/commentcontent"/>
                <TextView
                    android:id="@+id/timecontent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="112"
                    android:textSize="15dp"
                    android:layout_toRightOf="@id/time"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/createTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="创建时间:"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/createTimeContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2007"
                    android:textSize="20dp"
                    android:layout_toRightOf="@id/createTime"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/titleContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大帅哥"
                    android:textSize="20dp"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#7FFFD4"
        app:contentPadding="20dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/pic">
        <TextView
            android:id="@+id/picContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="APIForBilibili"
            android:textSize="20dp"/>
    </android.support.v7.widget.CardView>
</LinearLayout>