<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#7FFFD4"
        app:contentPadding="20dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/issueTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title: "
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/issueTitleContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="wangld"
                    android:textSize="20dp"
                    android:layout_toRightOf="@id/issueTitle"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/issueCreatedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="创建时间: "
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/issueCreatedTimeContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="wangld"
                    android:textSize="15dp"
                    android:layout_toRightOf="@id/issueCreatedTime"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/issueState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="问题状态: "
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/issueStateContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="wangld"
                    android:textSize="15dp"
                    android:layout_toRightOf="@id/issueState"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/issueDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="问题描述: "
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/issueDescriptionContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="wangld"
                    android:textSize="15dp"
                    android:layout_toRightOf="@id/issueDescription"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>