<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ListView
        android:id="@+id/commentList"
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"></ListView>
    <ImageView
        android:id="@+id/greyLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/commentList"
        android:src="@color/greyLine"/>
    <RelativeLayout
        android:id="@+id/commentPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/greyLine">
        <EditText
            android:id="@+id/editComment"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Comment"
            />
        <Button
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEND"
            android:layout_toRightOf="@id/editComment"/>
    </RelativeLayout>

</LinearLayout>