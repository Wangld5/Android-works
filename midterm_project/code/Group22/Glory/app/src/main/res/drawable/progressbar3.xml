<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="0"
                android:endColor="#1e925dea"
                android:startColor="#1e677fea" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>

            <shape>
                <corners android:radius="5dp"></corners>
                <gradient
                    android:angle="0"
                    android:endColor="#925DEA"
                    android:startColor="#677FEA" />
            </shape>
        </clip>
    </item>

</layer-list>